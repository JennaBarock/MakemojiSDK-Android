<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:tag="vpp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="Categories"
        style="@style/MakeMojiHeaderTextAppearance"
        android:id="@+id/_mm_page_heading"
        android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        android:id="@+id/_mm_moji_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/_mm_abc_tv"
            style="@style/MakeMojiHeaderTextAppearance"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:text="ABC"
            android:layout_height="wrap_content" />
        <com.viewpagerindicator.CirclePageIndicator
            app:fillColor="@color/_mm_left_button_cf"
            app:pageColor="@color/_mm_gradient_bottom"
            app:centered="true"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/_mm_vp_indicator"
            />
        <ImageView
            android:id="@+id/_mm_backspace_button"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mm_backspace_grey600_24dp"/>
    </LinearLayout>
</LinearLayout>