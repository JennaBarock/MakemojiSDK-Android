<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/_mm_light_grey"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/_mm_horizontal_ll"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <ImageButton
        android:id="@+id/_mm_camera_ib"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/mm_unknown_image"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:padding="6dp"
        android:layout_gravity="center"
        android:minHeight="35dp"
        android:minWidth="35dp"
        tools:src="@drawable/mm_dotted_square"
        android:background="@android:color/transparent"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:id="@+id/_mm_edit_text"/>
    </LinearLayout>


    <com.example.mojilib.MojiHSV
        android:id="@+id/_mm_hsv"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <include
                layout="@layout/mm_top_left_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <include
                layout="@layout/mm_recycler_layout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </com.example.mojilib.MojiHSV>
</LinearLayout>